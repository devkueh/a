import logging
import importlib
from aiogram import Bot, types
from aiogram.dispatcher import Dispatcher
from aiogram.utils import executor

# Включаем логирование
logging.basicConfig(level=logging.INFO)

# Создаем бота и диспетчера
bot = Bot(token='YOUR_TELEGRAM_TOKEN')
dp = Dispatcher(bot)

# Обрабатываем команду /start
@dp.message_handler(commands=['start'])
async def start_handler(message: types.Message):
    await message.reply('Привет, это твой user-бот Hikka!')

# Обрабатываем команду /dlmod
@dp.message_handler(commands=['dlmod'])
async def dlmod_handler(message: types.Message):
    module_name = message.get_args()
    
    try:
        module = importlib.import_module(module_name)
        await message.reply(f'Модуль {module_name} успешно загружен и установлен!')
    except ModuleNotFoundError:
        await message.reply(f'Модуль {module_name} не найден.')
    except Exception as e:
        await message.reply(f'Ошибка при загрузке и установке модуля {module_name}: {e}')
        
# Запускаем бота
executor.start_polling(dp, skip_updates=True)
